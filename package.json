{
  "name": "cherry-server",
  "version": "1.0.0",
  "description": "database / evertyhing server",
  "main": "src/index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p tsconfig.json",
    "start": "node build/index.js | pino-pretty --colorize",
    "dev": "ts-node-dev ./src/index.ts | pino-pretty --colorize",
    "postinstall": "npx typesync && husky install",
    "prisma": "dotenv -e .env prisma",
    "db:gen": "pnpm run prisma generate",
    "db:studio": "pnpm run prisma studio",
    "db:migrate": "pnpm run prisma migrate dev",
    "db:push": "pnpm run prisma db push",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [],
  "author": "kunihir0",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.16.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "env-schema": "^5.2.0",
    "fastify": "^4.19.2",
    "fluent-json-schema": "^4.1.0",
    "jsonwebtoken": "^9.0.1",
    "pino": "^8.14.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^20.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.44.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "pino-pretty": "^10.0.1",
    "prettier": "^3.0.0",
    "prisma": "^4.16.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "env": {
    "node": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "pnpm run build"
    }
  }
}
